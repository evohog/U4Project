import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        int five=0;
        int four=0;
        int full=0;
        int three=0;
        int two=0;
        int one=0;
        int high=0;

        int maxHands=10000;
        hand[] hands= new hand[maxHands];
        int count=0;

        try {
            Scanner sc = new Scanner(new File("src/data"));

            while (sc.hasNextLine()) {
                String line = sc.nextLine();
                String[] parts= line.split("\\|");
                String handString= parts[0];

                hand h= new hand(handString);
                hands[count]=h;
                count++;

                String bid=parts[1];
                int bidValue=0;
                for (int a=0; a<bid.length(); a++) {
                    bidValue=bidValue*10+(bid.charAt(a)-'0');  //used help online for this: What it does is it converts the string to int using Unicode codes '0' would be 48 and '1'=49 and so one increasing by 1, so '7'-'0'= 7 because it would be 55-48=7
                }
                h.setBid(bidValue);

                int type=h.getType();

                if (type==hand.fiveOfKind) {
                    five++;
                }
                else if (type==hand.fourOfKind) {
                    four++;
                }
                else if (type==hand.fullhouse) {
                    full++;
                }
                else if (type==hand.threeOfKind) {
                    three++;
                }
                else if (type==hand.twoPair) {
                    two++;
                }
                else if (type==hand.onePair) {
                    one++;
                }
                else if (type==hand.highCard) {
                    high++;
                }
            }

        }
        catch (FileNotFoundException e) {
            System.out.println("File not found");
        }

        System.out.println("Number of five of a kind hands: " + five);
        System.out.println("Number of full house hands: " + full);
        System.out.println("Number of four of a kind hands: " + four);
        System.out.println("Number of three of a kind hands: " + three);
        System.out.println("Number of two pair hands: " + two);
        System.out.println("Number of one pair hands: " + one);
        System.out.println("Number of high card hands: " + high);


        /// Part 2 only ////

        int totalBid=0;

        for (int i=0; i<count; i++) {
            int rank=1;
            for (int j=0; j<count; j++) {
                if (i!=j) {
                    if (hands[j].isStrongerThan(hands[i])) {
                        rank=rank+1;
                    }
                }
            }
            totalBid=totalBid+ rank*hands[i].getBid();
        }

        System.out.println("Total Bid Value: " + totalBid);


        ///  part 3///

        int totalWildBid=0;

        for (int i=0; i<count; i++) {

            int rankWild =1;
            for (int j=0; j<count; j++) {
                if (i!=j) {
                    if (hands[j].isStrongerThanWild(hands[i])) {
                        rankWild=rankWild+1;
                    }
                }

            }

            totalWildBid=totalWildBid+rankWild*hands[i].getBid();
        }

        System.out.println("Total Bid Value with Jacks: " + totalWildBid);



    }
}
