public class hand {

    private int[] cards;
    private int[] frequency;
    private int type;
    public static final int highCard=0;
    public static final int onePair= 1;
    public static final int twoPair=2;
    public static final int threeOfKind=3;
    public static final int fullhouse=4;
    public static final int fourOfKind=5;
    public static final int fiveOfKind=6;
    private static final String[] labels={"2","3","4","5","6","7","8","9","10","Jack","Queen","King","Ace"};


    public hand(String handString) {
        cards=new int[5];
        frequency=new int[13];

        analyzeHand(handString);
        buildFrequency();
        determineType();
    }


    private void analyzeHand(String handString) {
        String[] parts=handString.split(",");

        for (int i=0; i<5; i++) {
            cards[i]=labelToValue(parts[i]);
        }
    }

    private int labelToValue(String label) {
        for (int i=0; i<labels.length; i++) {
            if (labels[i].equals(label)) {
                return i;
            }
        }
        return 0;
    }

    private void buildFrequency() {
        for (int i=0; i<5; i++) {
            frequency[cards[i]]++;
        }
    }

    private void determineType() {
        int differentCard =0;
        int maxFrequency =0;

        for (int f: frequency) {
            if (f>0) {
                differentCard++;
            }
            if (f> maxFrequency) {
                maxFrequency =f;
            }
        }

        if (maxFrequency==5) {
            type=fiveOfKind;
        }
        else if (maxFrequency==4) {
            type=fourOfKind;
        }
        else if (maxFrequency==3 && differentCard==2) {
            type=fullhouse;
        }
        else if (maxFrequency==3) {
            type=threeOfKind;
        }
        else if (maxFrequency==2 && differentCard==3) {
            type=twoPair;
        }
        else if (maxFrequency==2) {
            type=onePair;
        }
        else {
            type=highCard;
        }
    }

    public int getType() {
        return type;
    }



    //PART 2 OK//////

    public boolean isStrongerThan(hand other) {
        if (other.type>this.type) {
            return true;
        }
        else if (other.type<this.type) {
            return false;
        }
        else {
            for (int i=0; i<5; i++) {
                if (other.cards[i]>this.cards[i]) {
                    return true;
                } else if (other.cards[i]<this.cards[i]) {
                    return false;
                }
            }
        }
        return false;
    }

    private int bid;

    public void setBid(int bidValue) {

        this.bid=bidValue;
    }

    public int getBid() {

        return this.bid;
    }


    /// part 3///

    private int typeWild;
    private int[] cardsWild;

    public void handWild(String handString1) {
        cardsWild=new int[5];
        frequency=new int[13];

        analyzeHand(handString1);
        buildFrequency();
        determineTypeWild();
    }

    public void determineTypeWild() {

        int[] frequencyNoJack=new int[13];

        for (int i=0; i<13; i++) {
            frequencyNoJack[i]=frequency[i];
        }

        int jackIndex=9;
        int jackCount=frequencyNoJack[jackIndex];
        frequencyNoJack[jackIndex]=0;
        int distinctWild=0;
        int highest=0;

        for (int i=0; i<13; i++) {
            if (frequencyNoJack[i]>0) {
                distinctWild++;
            }
            if (frequencyNoJack[i]>highest) {
                highest=frequencyNoJack[i];
            }
        }


        if (jackCount==0) {

            if (highest==5) {
                typeWild=fiveOfKind;
            }
            else if (highest==4) {
                typeWild=fourOfKind;
            }
            else if (highest==3 && distinctWild==2) {
                typeWild=fullhouse;
            }
            else if (highest==3) {
                typeWild=threeOfKind;
            }
            else if (highest==2 && distinctWild==3) {
                typeWild=twoPair;
            }
            else if (highest==2) {
                typeWild=onePair;
            }
            else {
                typeWild=highCard;
            }

        }
        else if (jackCount==1) {

            if (highest==4) {
                typeWild=fiveOfKind;
            }
            else if (highest==3) {
                typeWild=fourOfKind;
            }
            else if (highest==2 && distinctWild==2) {
                typeWild=fullhouse;
            }
            else if (highest==2) {
                typeWild=threeOfKind;
            }
            else {
                typeWild=onePair;
            }
        }
        else if (jackCount==2) {

            if (highest==3) {
                typeWild=fiveOfKind;
            }
            else if (highest ==2) {
                typeWild=fourOfKind;
            }
            else {
                typeWild=threeOfKind;
            }

        }
        else if (jackCount==3) {

            if (highest==2) {
                typeWild=fiveOfKind;
            }
            else {
                typeWild=fourOfKind;
            }
        }
        else if (jackCount==4) {

            typeWild=fiveOfKind;
        }
        else {
            typeWild = fiveOfKind;

        }
    }

    private int labelToValueWild(String label) {
        for (int i=0; i<labels.length; i++) {
            if (labels[i].equals(label)) {
                return i;
            }
        }
        return 0;
    }

    private void analyzeHandWild(String handString) {
        String[] parts=handString.split(",");

        for (int i=0; i<5; i++) {
            cardsWild[i]=labelToValueWild(parts[i]);
        }
    }

    public boolean isStrongerThanWild(hand other) {


        if (other.typeWild>this.typeWild) {
            return true;
        }
        else if (other.typeWild<this.typeWild) {
            return false;
        }
        else {
            for (int i=0; i<5; i++) {
                if (other.cardsWild[i]>this.cardsWild[i]) {
                    return true;
                } else if (other.cardsWild[i]<this.cardsWild[i]) {
                    return false;
                }
            }
        }
        return false;
    }





}
