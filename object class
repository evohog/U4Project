public class hand {

    private int[] cards;
    private int[] frequency;
    private int type;
    public static final int highCard=0;
    public static final int onePair= 1;
    public static final int twoPair=2;
    public static final int threeOfKind=3;
    public static final int fullhouse=4;
    public static final int fourOfKind=5;
    public static final int fiveOfKind=6;
    private static final String[] labels={"2","3","4","5","6","7","8","9","10","Jack","Queen","King","Ace"};


    public hand(String handString) {
        cards=new int[5];
        frequency=new int[13];

        analyzeHand(handString);
        buildFrequency();
        determineType();
    }


    private void analyzeHand(String handString) {
        String[] parts=handString.split(",");

        for (int i=0; i<5; i++) {
            cards[i]=labelToValue(parts[i]);
        }
    }

    private int labelToValue(String label) {
        for (int i=0; i<labels.length; i++) {
            if (labels[i].equals(label)) {
                return i;
            }
        }
        return 0;
    }

    private void buildFrequency() {
        for (int i=0; i<5; i++) {
            frequency[cards[i]]++;
        }
    }

    private void determineType() {
        int differentCard =0;
        int maxFrequency =0;

        for (int f: frequency) {
            if (f>0) {
                differentCard++;
            }
            if (f> maxFrequency) {
                maxFrequency =f;
            }
        }

        if (maxFrequency==5) {
            type=fiveOfKind;
        }
        else if (maxFrequency==4) {
            type=fourOfKind;
        }
        else if (maxFrequency==3 && differentCard==2) {
            type=fullhouse;
        }
        else if (maxFrequency==3) {
            type=threeOfKind;
        }
        else if (maxFrequency==2 && differentCard==3) {
            type=twoPair;
        }
        else if (maxFrequency==2) {
            type=onePair;
        }
        else {
            type=highCard;
        }
    }

    public int getType() {
        return type;
    }



    //PART 2 OK//////

    public boolean isStrongerThan(hand other) {
        if (other.type>this.type) {
            return true;
        }
        else if (other.type<this.type) {
            return false;
        }
        else {
            for (int i=0; i<5; i++) {
                if (other.cards[i]>this.cards[i]) {
                    return true;
                } else if (other.cards[i]<this.cards[i]) {
                    return false;
                }
            }
        }
        return false;
    }

    private int bid;

    public void setBid(int bidValue) {

        this.bid=bidValue;
    }

    public int getBid() {

        return this.bid;
    }






}
